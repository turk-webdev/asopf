<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h1 class="text-center mb-3">
                    <i class="fas fa-user"></i> Register</h1>
                <% include partials/messages.ejs %>
                <form action="/register" method="POST">
                    <div class="form-group">
                        <label for="fname">First Name</label>
                        <input type="fname" id="fname" name="fname" class="form-control" placeholder="Enter First Name"
                            value="<%= typeof fname != 'undefined' ? fname : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="lname">Last Name</label>
                        <input type="lname" id="lname" name="lname" class="form-control" placeholder="Enter Last Name"
                            value="<%= typeof lname != 'undefined' ? lname : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                            value="<%= typeof email != 'undefined' ? email : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control"
                            placeholder="Create Password"
                            value="<%= typeof password != 'undefined' ? password : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="password2">Confirm Password</label>
                        <input type="password" id="password2" name="password2" class="form-control"
                            placeholder="Confirm Password"
                            value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                    </div>
                    
                    <div class="form-group">
                        <label for="phone">Enter Number (optional)</label>
                        <input type="tel" id="phone" name="phone" class="form-control" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}">
                    </div>
                    <div class="form-group">
                        <label for="county-select">Choose a county (optional)</label>
                        <select class="form-control" name="county" id="county-select">
                            <option value="">--Please choose an option--</option>
